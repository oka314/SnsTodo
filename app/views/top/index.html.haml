.top-main  
  .top-main__box
    %h1.top-main__box--title
      ようこそ！MeToへ！
    -if user_signed_in?
      .top-main__box--log-in
        = link_to "ログアウト", destroy_user_session_path, method: :delete,class:"log-out"
        = link_to "今日のMeToを始める",posts_path,class:"start-btn"
    -else
      .top-main__box--log-in
        =link_to "ログイン",new_user_session_path, class:"login-btn"
        =link_to "新規会員登録",new_user_registration_path,class:"sign-btn"
.accbox
