.user-main 
  .user-main__box
    .user-main__box--title アカウント編集
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      = render "devise/shared/error_messages", resource: resource
      .email
        = f.label :メールアドレス,class:"field"
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email"
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %div
          Currently waiting confirmation for: #{resource.unconfirmed_email}
      .nickname
        = f.label :ニックネーム,class:"field"
        %br/
        = f.text_field :name, autofocus: true, autocomplete: "name"

      .password
        = f.label :変更したいパスワード,class:"field"
        %br/
        = f.password_field :password, autocomplete: "new-password"
        - if @minimum_password_length
          %br/
          %em
            = @minimum_password_length
            characters minimum
      .password
        = f.label :パスワード確認,class:"field"
        %br/
        = f.password_field :password_confirmation, autocomplete: "new-password"
      .passord
        = f.label :現在のパスワード,class:"field"
        %br/
        = f.password_field :current_password, autocomplete: "current-password"
      .actions
        = f.submit "変更",class:"field-btn"
    = link_to "戻る" ,root_path,class:"back-btn"
    