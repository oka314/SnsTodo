= render "header"
.main
  .main__box
    %h1.title みんなの投稿
    .content-box
      - @posts.each do |post|
        = link_to user_path(post.user),class:"posts-link" do
          .content-box__posts
            .posts-data
              .user-name
                =post.user.name
              .date
                =post.created_at.to_s(:datetime_jp)
              =render "likes/like"
            .posts-content
              =post.explain
    