= render "posts/header"
.main
  = render "posts/side"
  .main__right
    %h1.title "#{current_user.name}さんのToDoリスト"
    .content-box
      - @posts.each do |post|
        .content-box__posts
          .posts-data
            .user-name
              =post.user.name
            .date
              =post.created_at
          .posts-content
            =post.explain
